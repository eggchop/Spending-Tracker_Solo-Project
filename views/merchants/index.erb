<h2>Merchants</h2>

<div id="merchant-wrapper">
  <table class="merchtag">
    <tr>
      <th>Name</th>
      <th></th>
    </tr>

  <% @merchants.each do |merchant| %>
    <tr>
      <td><%= merchant.name.capitalize%></td>
      <td><a href="/merchants/<%= merchant.id %>">View</a></td>
    </tr>
    <% end %>
  </table>

  <form action="/merchants/new" method="GET">
    <input type="submit" value="New Merchant"/>
  </form>

</div>
