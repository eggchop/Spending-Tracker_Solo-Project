<h1 id="show">New Budget</h1>
<form id="form_align" method="POST" action="/budgets">

<p>
  <label for="name">
    Name:
  <input autocomplete="off" type="text" name="name" required/>
  </label></p>
<p>
  <label for="end_date">End Date:</label>
  <input type="date" name="end_date" />
</p>
<p>
  <label for="amount">Amount:</label>
  <input type="number" name="amount" step = "0.01" id="amount" pattern="^\d*(\.\d{0,2})?$" required/>
</p>
<p>
  <input class="buttons" type="submit" value="Create"/>
</p>
</form>
