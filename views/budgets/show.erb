<h1 id="show"> Budget Settings </h1>

<div id="budget-wrapper">
  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Amount</th>
      <th></th>
    </tr>
    </thead>
    <tr>
      <td><%= @budget.name %></td>
      <td><%= @budget.display_readable_date_start%></td>
