<h2>Transactions</h2>

<div id="transaction-wrapper">
  <% @transactions.each do |transaction| %>

  <div class="transaction">
    <p>Created: <%= transaction.date_added %></p>
    <p>Merchant: <%= transaction.merchant.name.capitalize %></p>
    <p>Spent: <%= transaction.price %></p>
    <p>Tag: <%= transaction.merchant.name.capitalize %></p>
    <p><a href="/transactions/<%= transaction.id %>">View</a></p>
  </div>

  <% end %>
</div>
