<h2>Transactions</h2>

<div class="filter-menu">

  <h2>Filter By</h2>
  <p>Merchant</p>
  <p><form method="GET" id="merchants_form" action=/transactions/merchants>
  <input type="text" name="search" form="merchants_form" />
  <button type="submit" form="merchants_form">ok</button></form>

  <p>Tag</p>
  <p><form method="GET" id="tags_form" action=/transactions/tags>
  <input type="text" name="search" form="tags_form" />
  <button type="submit" form="tags_form">ok</button></form>


  <a href='/transactions'>Clear Filter</a>

</div>

<div id="transaction-wrapper">
  <table>
    <tr>
      <th>Created</th>
      <th>Merchant</th>
      <th>Spent</th>
      <th>Tag</th>
      <th></th>
    </tr>

  <% @transactions.each do |transaction| %>
    <tr>
      <td><%= transaction.display_readable_date %></td>
      <td><%= transaction.merchant.name.capitalize %></td>
      <td><%= transaction.price %></td>
      <td><%= transaction.tag.name.capitalize %></td>
      <td><a href="/transactions/<%= transaction.id %>">View</a></td>
    </tr>
    <% end %>
  </table>

</div>
