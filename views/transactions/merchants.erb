<h2>Transactions</h2>

<form method="POST" id="my_form" action=/transactions/merchants></form>

<table>
    <tr>
      <td>Filter: Merchant</td>
        <td>
            <input type="text" name="search" form="my_form" />
            <button type="submit" form="my_form">ok</button>
        </td>
    </tr>
</table>

<div id="transaction-wrapper">
  <table>
    <tr>
      <th>Created</th>
      <th>Merchant</th>
      <th>Spent</th>
      <th>Tag</th>
      <th></th>
    </tr>

  <% @transactions.each do |transaction| %>
    <tr>
      <td><%= transaction.date_added %></td>
      <td><%= transaction.merchant.name.capitalize %></td>
      <td><%= transaction.price %></td>
      <td><%= transaction.tag.name.capitalize %></td>
      <td><a href="/transactions/<%= transaction.id %>">View</a></td>
    </tr>
    <% end %>
  </table>

</div>
